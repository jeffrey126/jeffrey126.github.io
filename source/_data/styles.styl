// 显示目录
.category-list ul {
  list-style: none;
  li:before {
    content: '>>';
  }
}

// 添加标题底部横线
h1, h2, h3, h4, h5, h6 {
  border-bottom: 2px solid #8c8c8c;
  padding: 0 5% 2px 0;
}

// 底部字体
.footer {
  color: $fontColor;
  font-size: 16px;
  +mobile() {
    font-size: 12px;
  }
  .busuanzi-value {
    font-weight: bold;
  }
}

// 背景
body {
 	background:url(https://i.ibb.co/2PZJbYJ/a9cbs-b6zmx.webp);
 	background-repeat: no-repeat;
    background-attachment:fixed;
    background-position:50% 50%;
    background-size:100% 100%;
}    
